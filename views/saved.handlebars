<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{#if articles}} {{#each articles}}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.url}} target="_blank">Click for Story!</a>
                    <button type="button" class="btn btn-success note" data-id={{this._id}}>Add a Note</button>
                    <button type="button" class="btn btn-success remove" data-id={{this._id}}>Remove from Saved Articles</button>
                </div>
            </div>
            {{/each}} {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>No saved articles!</h4>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>